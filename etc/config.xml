<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <catalogslider>
            <general>
                <enable_catalogslider>0</enable_catalogslider>
            </general>
            <slider_settings>
                <display_title>0</display_title>
                <display_price>1</display_price>
                <display_cart>1</display_cart>
                <display_wishlist>1</display_wishlist>
                <display_compare>1</display_compare>
                <grid>0</grid>
                <exclude_from_cart>0</exclude_from_cart>
                <exclude_from_checkout>0</exclude_from_checkout>
                <navigation>0</navigation>
                <infinite>1</infinite>
                <products_in_slider>1</products_in_slider>
                <slides_to_show>4</slides_to_show>
                <slides_to_scroll>2</slides_to_scroll>
                <speed>500</speed>
                <autoplay>0</autoplay>
                <autoplay_speed>1000</autoplay_speed>
                <rtl>0</rtl>
                <breakpoint_large>1024</breakpoint_large>
                <large_slides_to_show>3</large_slides_to_show>
                <large_slides_to_scroll>2</large_slides_to_scroll>
                <breakpoint_medium>768</breakpoint_medium>
                <medium_slides_to_show>2</medium_slides_to_show>
                <medium_slides_to_scroll>1</medium_slides_to_scroll>
                <breakpoint_small>480</breakpoint_small>
                <small_slides_to_show>1</small_slides_to_show>
                <small_slides_to_scroll>1</small_slides_to_scroll>
            </slider_settings>
        </catalogslider>
    </default>
</config>